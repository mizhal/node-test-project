section#main-center
  .container
    .row
      .col-lg-12
        .main-carousel-frame
          carousel.main
            slide(ng-repeat="slide in slides" active="slide.active")
              .slide-frame-cutter
                img.slide-image(src="{{slide.url}}")
              .carousel-caption
                h4 {{slide.title}}
                p {{slide.text}}

        ul.image(rn-carousel)
          li
            img(src="assets/images/carousel1.png")
          li
            img(src="assets/images/carousel2.png")
          li
            img(src="assets/images/carousel3.png")
    section#login-form.col-md-3
      .login-frame
        .login-header
          h2(translate="LOGIN_HEADER")
        .login-body
          form.form(name='form', ng-submit='login(form)', novalidate='')
            .form-group
              input.form-control(type='text', name='login', ng-model='user.login')
            .form-group
              input.form-control(type='password', name='password', ng-model='user.password')
            .form-group.has-error
              p.help-block(ng-show='form.login.$error.required && form.password.$error.required && submitted')
                | Please enter your email and password.
              p.help-block {{ errors.other }}
            .form-group
              input.form-control(type="submit" caption="Entrar")

