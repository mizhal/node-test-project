section#login-form.col-md-3
  .login-frame
    .login-header
      h2(translate="LOGIN_HEADER")
    .login-body
      form.form(name='form', ng-submit='login(form)', novalidate='')
        .form-group
          input.form-control(type='text', name='login', ng-model='user.login')
        .form-group
          input.form-control(type='password', name='password', ng-model='user.password')
        .form-group.has-error
          p.help-block(ng-show='form.login.$error.required && form.password.$error.required && submitted')
            | Please enter your email and password.
          p.help-block {{ errors.other }}
        .form-group
          input.form-control(type="submit" caption="Entrar")

